<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Module/etc/module.xsd">
    <table name="customer_vouchers" resource="default" engine="innodb"
           comment="Catalog Customer Vouchers Table">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Voucher Code"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Customer ID"/>
        <column xsi:type="int" name="status_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Status ID"/>
        <column xsi:type="varchar" name="voucher_code" nullable="false" length="64"
                comment="Voucher Code"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Create Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Update Time"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>

        <constraint xsi:type="unique" referenceId="CUSTOMER_VOUCHERS_VOUCHER_CODE">
            <column name="voucher_code"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="CUSTOMER_VOUCHERS_ENTITY_ID_CUSTOMER_ENTITY_ENTITY_ID"
                    table="customer_vouchers" column="customer_id" referenceTable="customer_entity"
                    referenceColumn="entity_id" onDelete="CASCADE"/>

        <constraint xsi:type="foreign" referenceId="CUSTOMER_VOUCHERS_STATUS_ID_VOUCHER_STATUS_ENTITY_ID"
                    table="customer_vouchers" column="status_id" referenceTable="voucher_status"
                    referenceColumn="entity_id" onDelete="CASCADE"/>


<!--        <index referenceId="CUSTOMER_VOUCHERS_ENTITY_ID" indexType="btree">-->
<!--            <column name="entity_id"/>-->
<!--        </index>-->
<!--        <index referenceId="CUSTOMER_VOUCHERS_ENTITY_ID" indexType="btree">-->
<!--            <column name="entity_id"/>-->
<!--        </index>-->
    </table>
</schema>


